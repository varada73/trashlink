<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Collectorinfo"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill these details"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="15sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of organisation:"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="42dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="20sp"
        android:hint="Enter enter the name"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="42dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="20sp"
        android:hint="Enter  email address"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No."
        android:textSize="20sp"

        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="42dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:textSize="20sp"
        android:hint="Enter contact number"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City,State"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="42dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:textSize="20sp"
        android:hint="Enter  City,State both of organisation "
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details about organisation"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="42dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:textSize="20sp"
        android:hint="Enter details like type of waste organisation collects,etc"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:textSize="20sp"
        android:textStyle="bold"/>



</LinearLayout>